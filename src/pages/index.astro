---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "Piyush Gupta";
const description = "Welcome to Piyush Gupta's personal website. Explore the portfolio of Piyush Gupta, a passionate Full-Stack Developer based in New Delhi, IN. Get in touch to discuss projects, collaborations, and opportunities. Browse through projects showcasing expertise in Flutter, Machine Learning, Android Development, RestAPIs, and Frontend Web Development. Learn more about Piyush's skills in C/C++, Python, Dart, Kotlin, JavaScript, HTML, and CSS. Stay updated with certifications, achievements, and experience at Bharati Vidyapeeth's College of Engineering and Shuniyavigyan. Contact Piyush Gupta for all your software development needs.";
const keywords = "Piyush Gupta, Full-Stack Developer, New Delhi, IN, Contact Information, Bharati Vidyapeeth's College of Engineering, BTech in Computer Science and Engineering, Kulachi Hansraj Model School, C/C++, Python, Dart, Kotlin, JavaScript, HTML, CSS, Android Studio, Flutter, Machine Learning, RestAPIs, Frontend Web Development, Data Structures, Algorithms, Object-Oriented Programming, Firebase, MySQL, MongoDB, Shuniyavigyan, Flutter Developer Intern, Agile Methodologies, JSON, Credit Card Fraud Detection, Federated Learning, TensorFlow, BHOLU, Dart, Hindi Programming, BOOKMYPARKINGLOT, Vikas, Spring Boot APIs, Restaurant Review Analysis, Natural Language Processing, NaÃ¯ve Bayes, BEAT THE BASE, Solar, SECUREPLUG, Vulnerability Scanning, Certifications, Recognition, Achievements, SMART INDIA HACKATHON, HackCBS, GDSC-BVP, DigiToad Technology, Network Bulls, Ducat, Udemy, QwikLabs, Forage, BVEST 2021";
const permalink = Astro.site.href;
---

<BaseLayout title={title} description={description} permalink={permalink}>
  <div class="home-container">
    <div class="home-copy">
      <h1>Hi, my name is Piyush Gupta! ðŸ˜Š</h1>
      <p>
        I'm Passionate Full-Stack Developer with expertise in <span class="emp-text"
          >Flutter</span
        > and <span class="emp-text">Machine Learning</span>.
      </p>
      <button class="button"
        ><a target='_blank' href="Piyush_Gupta_Resume.pdf">Resume</a>
      </button>
      
      <div class="socials">
        <a target='_blank' href="https://twitter.com/Piyush_Guptaaa"><img src="/assets/socials/twitter.png" alt="Twitter Logo" height="50px" width="50px"></a>
        
        <a target='_blank' href="https://www.linkedin.com/in/piyush-gupta-09"><img id="linkedin" src="/assets/socials/linkedin.webp" alt="LinkedIn Logo" height="50px" width="50px"></a>
        
        <a target='_blank' href="https://github.com/Piyush-Guptaa/"><img id="github" src="/assets/socials/github.png" alt="Github Logo" height="50px" width="50px"></a>
        <a target='_blank' href="https://youtube.com/@piyushguptaaa"><img id="youtube" src="/assets/socials/youtube.svg" alt="Github Logo" height="50px" width="50px"></a>

        
        
      </div>
      
      
    </div>

    <div class="hero-image-container">
      <picture>
        <source srcset="/assets/profile.jpg" media="(min-width: 600px)" />
        <img
          class="hero-image"
          alt="Profile picture"
          src="/assets/me.jpg"
          width="200"
          height="200"
        />
      </picture>
    </div>
  </div>
</BaseLayout>

<style>
  .socials img {
    margin-right: 20px;
    margin-top: 30px;
    transition: 0.5s;
  }

  .socials img:hover {
    padding: 2px;
    transition: 0.5s;
  }

  #linkedin {
    border-radius: 10px;
  }

  #github {
    background-color: white;
    /* padding: 1px; */
    border-radius: 10px;
  }

  .home-container {
    align-items: center;
    display: flex;
    flex: 1;
    justify-content: center;
    margin: 2em 0;
    min-height: 400px;
  }

  .home-copy {
    flex: 1;
    padding: 0 1em;
  }

  .home-copy h1 {
    font-weight: 700;
    margin-bottom: 0.5em;
    line-height: 1.3;
  }

  .home-copy p {
    font-size: 1.4em;
  }

  .hero-image-container {
    margin: 0 1em;
    text-align: center;

    transition: 0.5s;
  }

  .hero-image-container picture {
    display: block;
    min-height: 250px;
  }

  .caption {
    font-size: 0.8em;
    font-style: italic;
    text-align: left;
  }

  @media (max-width: 1200px) {
    p {
      font-size: 1.2em;
    }

    .hero-image {
      max-width: 400px;
    }
  }

  @media (max-width: 800px) {
    .home-container {
      flex-direction: column;
    }

    .home-copy {
      flex: 0;
      padding-bottom: 2em;
      text-align: center;
    }
  }
</style>
